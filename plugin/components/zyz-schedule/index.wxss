/* plugin/components/zyz-schedule/index.wxss */
.zyz-schedule{
  background: white;
  box-shadow: 2rpx 4rpx 6rpx #DDDDDD;
  padding: 0 12rpx 0 100rpx;
  position: relative;
}
.hour{
  position: relative;
  /* margin: 0 12rpx 0 100rpx; */
}
.hour-time{
  color: #BBBBBB;
  font-size: 10px;
  position: absolute;
  top: -14rpx;
  left: -76rpx;
}
.bottom-line{
  border-bottom: 1rpx solid #DDDDDD;
}
.schedule-cover{
  position: absolute;
  top: 0;
  left: 88rpx;
  right: 12rpx;
  bottom: 0;
  display: flex;
}
.cover-level{
  flex-grow: 1;
  position: relative;
  margin-left: 12rpx;
}
.schedule-event{
  width: 100%;
  position: absolute;
  border: 1rpx solid #DDDDDD;
  border-radius: 0 6rpx 6rpx 0;
}
.schedule-event0{
  top: 0;
  height: 1200rpx;
}
.event-left{
  margin-left: -6rpx;
  border-right: 6rpx solid #52C9C2;
  border-bottom: 6rpx solid transparent;
  border-top: 6rpx solid transparent;
  height: 388rpx;
  width: 0;
  position: absolute;
  left: 0;
  top: 0;
}
.event-title{
  margin: 10rpx;
  font-size: 12px;
}
.schedule-event1{
  top: 1300rpx;
  height: 400rpx;
}
.schedule-event2{
  top: 2000rpx;
  height: 400rpx;
}
.schedule-event3{
  top: 0;
  height: 300rpx;
}
.schedule-event4{
  top: 500rpx;
  height: 500rpx;
}
.schedule-event5{
  top: 1300rpx;
  height: 1000rpx;
}
.schedule-event6{
  top: 0;
  height: 600rpx;
}
.schedule-event7{
  top: 800rpx;
  height: 900rpx;
}
.schedule-event8{
  top: 1800rpx;
  height: 800rpx;
}

.schedule-event9{
  top: 2650rpx;
  height: 100rpx;
}
.time-line{
  left: 0;
  position: absolute;
  right: 12rpx;
  display: flex;
  align-items: center;
}
.now-time{
  padding-left: 24rpx;
  font-size: 10px;
  background: white;
  color: red;
}
.now-dot{
  border-radius: 50%;
  width: 10rpx;
  height: 10rpx;
  background: red;
  margin-left: 6rpx;
}
.now-line{
  flex-grow: 1;
  height: 2rpx;
  background: red;
}